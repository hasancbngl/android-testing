<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.cobanogluhasan.testing.ui.view.fragments.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.cobanogluhasan.testing.ui.view.fragments.DetailsFragment"
        android:label="DetailsFragment" >
        <action
            android:id="@+id/action_detailsFragment_to_searchApiFragment"
            app:destination="@id/searchApiFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchApiFragment"
        android:name="com.cobanogluhasan.testing.ui.view.fragments.SearchApiFragment"
        android:label="SearchApiFragment" >
        <action
            android:id="@+id/action_searchApiFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
</navigation>